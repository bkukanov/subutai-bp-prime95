{
    "name": "${environmentName}",
    "description": "Prime95",
    "version": "0.0.1",
    "author": "https://github.com/lbthomsen",
    "ssh-key": "lth", 
    "containers": [
        {
            "hostname": "p95",
            "template": "debian-stretch",
            "peer-criteria": "peers",
            "size": "TINY"
        }
    ],
    "peer-criteria": [
        {
            "name": "peers"
        }
    ],
    "ansible-configuration": {
        "source-url": "https://github.com/lbthomsen/subutai-bp-prime95/archive/master.zip",
        "ansible-playbook": "site.yml",
        "extra-vars": [
            {
                "key": "domain_name",
                "value": "${domainName}"
            }, 
            {
                "key": "db",
                "value": "${db}"
            }, 
            {
                "key": "db_user",
                "value": "${dbUser}"
            }, 
            {
                "key": "db_pwd",
                "value": "${dbPwd}"
            }
        ],
        "groups": [
            {
                "name": "p95",
                "hostnames": [
                    "p95"
                ]
            }
        ]
    },
    "user-variables": {
        "environmentName": {
            "description": "Enter the environment name",
            "type": "string",
            "default": "nc",
            "validation": "[a-zA-Z0-9]+"
        }
    }
}
